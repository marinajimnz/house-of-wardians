---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Section1 from "../../components/Section1.astro";
import Section2 from "../../components/Section2.astro";
import Section3 from "../../components/Section3.astro";
import Divider from "../../components/Divider.astro";
import FAQs from "../../components/FAQs.astro";
import Footer from "../../components/Footer.astro";

import content from "../../i18n/es.json";
---

<Layout
  lang="es"
  title="House of Wardians – Juego de estrategia para móviles"
  description="House of Wardians es un juego de lucha estratégica con combate automático. Recluta, evoluciona y compite desde tu móvil."
>
  <div class="relative h-[400vh]">
    <Hero
      content={content.hero}
      androidButton={{
        link: content.buttonAndroid.href,
        image: content.buttonAndroid.image,
        alt: content.buttonAndroid.alt,
      }}
      iosButton={{
        link: content.buttonIos.href,
        image: content.buttonIos.image,
        alt: content.buttonIos.alt
      }}
      lang= "es"
    />
    <Divider />
    <Section1
      content={content.section1}
      discordButton={{
        link: content.buttonDiscord.href,
        image: content.buttonDiscord.image,
        alt: content.buttonDiscord.alt
      }}
    />
    <Section2 content={content.section2} />
    <Section3 content={content.section3} />
    <FAQs
      content={content.faqs}
      discordButton={{
        link: content.buttonDiscord.href,
        image: content.buttonDiscord.image,
        alt: content.buttonDiscord.alt
      }}
    />
    <Footer
      content={content.footer}
      lang="es"
      androidButton={{
        link: content.buttonAndroid.href,
        image: content.buttonAndroid.image,
        alt: content.buttonAndroid.alt
      }}
      iosButton={{
        link: content.buttonIos.href,
        image: content.buttonIos.image,
        alt: content.buttonIos.alt
      }}
    />
  </div>
</Layout>
