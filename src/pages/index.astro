<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Detectando idioma...</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script is:inline>
      // Detectar si el usuario ya eligió un idioma anteriormente
      const storedLang = localStorage.getItem('preferredLang');
      const browserLang = navigator.language || navigator.userLanguage;
      const langCode = storedLang || (browserLang.startsWith('es') ? 'es' : 'en');

      // Guardar preferencia si no estaba guardada
      if (!storedLang) {
        localStorage.setItem('preferredLang', langCode);
      }

      // Redirigir solo si estamos en la raíz
      if (window.location.pathname === '/' || window.location.pathname === '') {
        window.location.replace('/' + langCode + '/');
      }
    </script>
  </head>
  <body class="bg-black text-white text-center p-10">
    <p>Redirigiendo al idioma...</p>
  </body>
</html>
